{% extends 'base.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    
    <div class="register-form">
        <div class="justify-content-md-center" style="padding: 70px 0;">
            <div class="col-xs-12 col-md-6 mx-auto">
                <div class="text-center">
                    <h2>Inscription</h2>
                </div>
                {{ form_start(registrationForm) }}
                    <div class="form-row mx-auto">
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.email, { 'label' : 'Adresse Email', 'attr' : {'placeholder' : 'Veuillez saisir votre email' }}) }}
                        </div>
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.username, { 'label' : 'Pseudo', 'attr' : {'placeholder' : 'Veuillez saisir un pseudonyme' }}) }}
                        </div>
                    </div>
                    <div class="form-row mx-auto">
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.password.first, { 'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Veuillez saisir un mot de passe' }}) }}
                        </div>
                         <div class="form-group col-6">
                            {{ form_row(registrationForm.password.second, { 'label' : 'Répétez votre Mot de passe', 'attr' : {'placeholder' : 'Veuillez saisir un mot de passe' }}) }}
                        </div>
                    </div>
                    <div class="form-row mx-auto">
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.firstname, { 'label' : 'Prénom', 'attr' : {'placeholder' : 'Veuillez saisir votre prénom' }}) }}
                        </div>
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.lastname, { 'label' : 'Nom', 'attr' : {'placeholder' : 'Veuillez saisir votre Nom' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.address, { 'label' : 'Addresse', 'attr' : {'placeholder' : 'Veuillez saisir votre addresse' }}) }}
                    </div>
                    <div class="form-radio">
                        {{ form_row(registrationForm.gender, { 'label' : 'Genre' }) }}
                    </div>
                    <div class="form-row mx-auto">
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.city, { 'label' : 'Ville', 'attr' : {'placeholder' : 'Veuillez saisir votre ville' }}) }}
                        </div>
                        <div class="form-group col-6">
                            {{ form_row(registrationForm.zip, { 'label' : 'Code postal', 'attr' : {'placeholder' : 'Veuillez saisir le code postal' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.country, { 'label' : 'Pays' }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.phone, { 'label' : 'Numéro de téléphone', 'attr' : {'placeholder' : 'Veuillez saisir votre numéro' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.dateofbirth, { 'label' : 'Date de naissance' }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.agreeTerms, { 'label' : 'Veuillez accepter les termes' }) }}
                    </div>
                    <div class="form-submit text-center">
                        <button id="submit" type="submit" class="btn btn-success">Inscription</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
