{% extends 'base.html.twig' %}

{% block body %}
<form method="post">
    <div class="login-form">
        <div class="justify-content-md-center" style="padding: 190px 0;">
                <div class="col-xs-12 col-md-5 mx-auto">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if error %}
                    <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="text-center">
                    <h2>Connexion</h2>
                </div>
                <h1 class="h3 mb-3 font-weight-normal">Connectez-vous ici</h1>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="form-group">   
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="text-center">
                    <button class="btn btn-lg btn-success text-center" type="submit">
                        Connexion
                    </button>
                </div>
                <div class="text-center">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
                </div>
                <div class="text-center">
                    <a href="{{ path('app_register') }}">Pas encore de compte ? Inscrivez vous ici</a>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
