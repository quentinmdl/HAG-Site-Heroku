{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="reset-pwd">
        <div class="justify-content-md-center" style="padding: 70px 0;">
            <div class="col-xs-12 col-md-5 mx-auto">
                <div class="text-center">
                    <h1>Reinitialisation du mot de passe</h1>
                </div>
                {{ form_start(resetForm) }}
                    <div>
                        {{ form_row(resetForm.password.first, { 'label' : 'Mot de passe' }) }}
                    </div>
                    <div>
                        {{ form_row(resetForm.password.second, { 'label' : 'Répétez votre Mot de passe' }) }}
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Reinitialiser</button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>

{% endblock %}
