{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.firstname, {
            label: 'firstname'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'lastname'
        }) }}
        {{ form_row(registrationForm.gender, {
            label: 'gender'
        }) }}
        {{ form_row(registrationForm.address, {
            label: 'address'
        }) }}
        {{ form_row(registrationForm.city, {
            label: 'city'
        }) }}
        {{ form_row(registrationForm.zip, {
            label: 'zip'
        }) }}
        {{ form_row(registrationForm.country, {
            label: 'country'
        }) }}
        {{ form_row(registrationForm.phone, {
            label: 'phone'
        }) }}
        {{ form_row(registrationForm.dateofbirth, {
            label: 'dateofbirth'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
