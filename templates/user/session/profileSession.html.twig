{% extends 'user.html.twig' %}

{% block body %}
    <div class="profile-session">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="col-md-7 col-xs-12 mx-auto">
            <p><b>Espace Session</b></p>
            <div class="profile-session-div">
                <h3>Liste des défis par date</h3>
                <div class="card-group profile-session-challenges">  
                    {% for challenge in challenges %}
                        <div class="card  card-session-challenge col-md-4 col-xs-12 mx-auto">
                            <img class="card-img-top" src="{{ vich_uploader_asset(challenge, 'imageFile') }}" width="50" height="200" alt="img défi">
                            <div class="card-body card-session-challenge-body">
                                <div class="">
                                    <h6 class="card-title">{{ challenge.name }}</h6>
                                    <a href="{{ path('app_user_session_challenge_show', {'slug':challenge.slug} ) }}" class="btn-black">Voir</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="pagination">
					{{ knp_pagination_render(challenges) }}
				</div>
            </div>
        </div>
    </div>
{% endblock %}