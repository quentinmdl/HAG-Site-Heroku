{% extends 'user.html.twig' %}

{% block body %}
    <div class="edit-profile">
        <div class="edit-profile-div">
            <div class="col-xs-12 col-md-5 mx-auto">
                <div class="edit-profile-title">
                    <h2>Modifications de votre mot de passe</h2>
                </div>
                {{ form_start(formEditPasswordUser) }}
                    <div>
                        {{ form_row(formEditPasswordUser.password.first, { 'label' : 'Mot de passe' }) }}
                    </div>
                    <div>
                        {{ form_row(formEditPasswordUser.password.second, { 'label' : 'Répétez votre Mot de passe' }) }}
                    </div>
                    <div>
                        {{ form_row(formEditPasswordUser._token) }}
                    </div>
                    <div class="edit-profile-btn">
                        <button type="submit" class="btn-orange">Modifier</button>
                    </div>
                {{ form_start(formEditPasswordUser) }}
            </div>
        </div>
    </div>
{% endblock %}