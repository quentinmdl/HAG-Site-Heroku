{% extends 'user.html.twig' %}



{% block body %}
    <div class="row justify-content-md-center" style="padding: 70px 0;">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="col-md-3 col-xs-12">
            <div class="card text-center h-100">
                <div class="card-body">
                    <img src=""  width="100" heigth="auto" alt="image de profil">
                    <h5 class="card-title">Bonjour {{ app.user.firstname }} {{ app.user.lastname }}</h5>
                    <p class="card-text text-center">Bienvenue sur votre profil</p>
                    <div style="margin-top : 10%">
                        Vous êtes un 
                        {% for role in app.user.roles %}
                          
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_SUPER_ADMIN" %}
                                SuperAdmin /
                            {% elseif role == "ROLE_ADMIN" %}
                                Admin 
                            {% endif %}
                        {% endfor %}
                    </div> 
                    {# {{ form_start(formEditProfileImage) }}
                        <div>
                            {{ form_widget(formEditProfileImage.profileImage, { 'label' : 'Image de profil' }) }}
                        </div>
                         <div>
                           <button type="submit" class="btn btn-success">Modifier</button>
                        </div>
                    {{ form_end(formEditProfileImage)}} #}
                </div>
                <div class="card-footer">
                    <p class="card-text">Inscrit depuis le {{ app.user.createdAt | date('d/m/Y')}} à {{ app.user.createdAt | date('h:m')}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-122">
            <div class="card mx-auto">
                <div class="card-body">
                    <h5 class="card-title">Vos Informations</h5>
                    <div class="row mx-auto">
                        <div>
                            <p>Nom : {{ app.user.lastname }} <br></p>
                        </div>
                        <div>
                            <p>Prénom : {{ app.user.firstname }}</p>
                        </div>
                    </div>
                    <div>
                        <p>Email : {{ app.user.email }}</p>
                    </div>
                    <div>
                        <p>Pseudo : {{ app.user.username }}</p>
                    </div>
                    <div class="row mx-auto">
                        <div>
                            <p>Mdp : ••••••... <br></p>
                        </div>
                        <div>
                            <a href="{{ path('app_password_update')}}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                    <div>
                        <p>Adresse : {{ app.user.address }}</p>
                    </div>
                    <div class="row mx-auto">
                        <div>
                            <p>Ville : {{ app.user.city }} / <br></p>
                        </div>
                        <div>
                            <p>Code postal : {{ app.user.zip }}</p>
                        </div>
                    </div>
                    <div>
                        <p>Téléphone : {{ app.user.phone }}</p>
                    </div>                
                    <a href="{{ path('app_user_update')}}" class="btn btn-primary">Mettre à jour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
